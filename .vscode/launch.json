{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Web.Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/ContosoCrafts.Web.Server/bin/Debug/net5.0/ContosoCrafts.Web.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/ContosoCrafts.Web.Server",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
        },
    ]
}